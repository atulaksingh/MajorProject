<% layout('/layouts/boilerplate') -%>

<body class="bg-light">
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0 rounded-4">
          <div class="card-body p-4">
            <h3 class="mb-4 text-center text-primary">Create a New Listing</h3>
            <form
              method="POST"
              action="/listings"
              class="needs-validation"
              novalidate
            >
              <!-- Title -->
              <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input
                  id="title"
                  name="listing[title]"
                  type="text"
                  class="form-control"
                  placeholder="Enter title"
                  required
                />
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please input a valid title</div>
              </div>

              <!-- Description -->
              <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea
                  id="description"
                  name="listing[description]"
                  class="form-control"
                  rows="3"
                  placeholder="Enter description"
                  required
                ></textarea>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">
                  Please input a valid Description
                </div>
              </div>

              <!-- Image URL -->
              <div class="mb-3">
                <label for="image" class="form-label">Image URL</label>
                <input
                  id="image"
                  name="listing[image]"
                  type="url"
                  class="form-control"
                  placeholder="Enter image URL"
             
                />
              </div>

              <!-- Price -->
              <div class="mb-3">
                <label for="price" class="form-label">Price (₹)</label>
                <input
                  id="price"
                  name="listing[price]"
                  type="text"
                  class="form-control"
                  placeholder="Enter price"
              
                />
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please input a valid price</div>
              </div>

              <!-- Country -->
              <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <input
                  id="country"
                  name="listing[country]"
                  type="text"
                  class="form-control"
                  placeholder="Enter country"
                  required
                />
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please input a valid Country</div>
              </div>

              <!-- Location -->
              <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input
                  id="location"
                  name="listing[location]"
                  type="text"
                  class="form-control"
                  placeholder="Enter location"
                  required
                />
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">
                  Please input a valid Location
                </div>
              </div>

              <!-- Submit -->
              <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">
                  Add Listing
                </button>
              </div>
            </form>
          </div>
        </div>
        <p class="text-center mt-3">
          <a href="/" class="text-decoration-none">← Back to Listings</a>
        </p>
      </div>
    </div>
  </div>
</body>
