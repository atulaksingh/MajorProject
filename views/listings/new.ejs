<% layout('/layouts/boilerplate') -%>
<style>
  .btn-airbnb {
    background-color: #FF385C;
    border-color: #FF385C;
    color: white;
    font-weight: 500;
  }
  .btn-airbnb:hover {
    background-color: #e03e52;
    border-color: #e03e52;
    color: white;
  }
  .card-custom {
    border-radius: 20px;
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }
  .card-custom:hover {
    transform: translateY(-3px);
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.08);
  }
  .form-control {
    border-radius: 10px;
    padding: 10px 12px;
  }
  .form-label {
    font-weight: 500;
    color: #555;
  }
</style>

<body class="bg-light">
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0 card-custom">
          <div class="card-body p-4">
            <h3 class="mb-4 text-center" style="color:#FF385C; font-weight:700;">
              üè† Create a New Listing
            </h3>
            <form
              method="POST"
              action="/listings"
              class="needs-validation"
              novalidate
              enctype="multipart/form-data"
            >
              <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input
                  id="title"
                  name="listing[title]"
                  type="text"
                  class="form-control"
                  placeholder="Enter a catchy title"
                  required
                />
                <div class="invalid-feedback">Please input a valid title</div>
              </div>

              <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea
                  id="description"
                  name="listing[description]"
                  class="form-control"
                  rows="3"
                  placeholder="Describe your place..."
                  required
                ></textarea>
                <div class="invalid-feedback">Please input a valid description</div>
              </div>

              <div class="mb-3">
                <label for="image" class="form-label">Upload Listing Image</label>
                <input
                  id="image"
                  name="listing[image]"
                  type="file"
                  class="form-control"
                  required
                />
              </div>

              <div class="mb-3">
                <label for="price" class="form-label">Price (‚Çπ)</label>
                <input
                  id="price"
                  name="listing[price]"
                  type="text"
                  class="form-control"
                  placeholder="price"
                  required
                />
                <div class="invalid-feedback">Please input a valid price</div>
              </div>

              <div class="mb-3">
                <label for="country" class="form-label">Country</label>
                <input
                  id="country"
                  name="listing[country]"
                  type="text"
                  class="form-control"
                  placeholder="Enter your country"
                  required
                />
                <div class="invalid-feedback">Please input a valid country</div>
              </div>

              <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input
                  id="location"
                  name="listing[location]"
                  type="text"
                  class="form-control"
                  placeholder="Enter your city or area"
                  required
                />
                <div class="invalid-feedback">Please input a valid location</div>
              </div>

              <div class="d-grid">
                <button type="submit" class="btn btn-airbnb btn-lg">
                  ‚ûï Add Listing
                </button>
              </div>
            </form>
          </div>
        </div>
        <p class="text-center mt-3">
          <a href="/" class="text-decoration-none">‚Üê Back to Listings</a>
        </p>
      </div>
    </div>
  </div>
</body>
<%- include('../includes/footer') %>
