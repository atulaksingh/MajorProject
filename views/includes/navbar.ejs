<style>

  .navbar-airbnb {
    background-color: #fff;
    box-shadow: 0 2px 6px rgba(0,0,0,0.05);
    padding: 0.6rem 1rem;
  }

  .navbar-airbnb .navbar-brand {
    color: #FF385C;
    font-weight: bold;
    font-size: 1.5rem;
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .navbar-airbnb .nav-link {
    color: #555;
    font-weight: 500;
    padding: 0.5rem 0.8rem;
    transition: color 0.2s ease;
  }

  .navbar-airbnb .nav-link:hover {
    color: #FF385C; 
  }

  .navbar-airbnb .btn-airbnb {
    background-color: #FF385C;
    color: white;
    border-radius: 20px;
    padding: 6px 18px;
    font-weight: 500;
    transition: background-color 0.2s ease;
  }

  .navbar-airbnb .btn-airbnb:hover {
    background-color: #e03e52;
  }

  .search-box {
    border-radius: 20px;
    padding: 6px 14px;
    border: 1px solid #ddd;
    min-width: 200px;
    transition: border-color 0.2s ease;
  }

  .search-box:focus {
    outline: none;
    border-color: #FF385C;
    box-shadow: 0 0 0 2px rgba(255, 56, 92, 0.15);
  }

  .btn-search {
    border-radius: 20px;
    padding: 6px 16px;
    font-weight: 500;
    color: #555;
    border: 1px solid #ddd;
    transition: all 0.2s ease;
  }

  .btn-search:hover {
    background-color: rgba(255, 56, 92, 0.08);
    color: #FF385C;
    border-color: #FF385C;
  }
</style>


<nav class="navbar navbar-expand-md navbar-airbnb">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings">
      <i class="fa-solid fa-compass"></i> StayFinder
    </a>

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarSupportedContent"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link" href="/listings">Explore</a>
        </li>
      </ul>

      <ul class="navbar-nav mb-2 mb-lg-0 align-items-center">
        <li class="nav-item me-2">
          <a href="/listings/new" class="btn btn-airbnb">Airbnb your home</a>
        </li>
        <% if (!currentUser) { %>
          <li class="nav-item"><a class="nav-link" href="/login"><b>Login</b></a></li>
          <li class="nav-item"><a class="nav-link" href="/signup"><b>Signup</b></a></li>
        <% } %> 
        <% if (currentUser) { %>
          <li class="nav-item"><a class="nav-link text-danger" href="/logout">Logout</a></li>
        <% } %>
      </ul>

      <!-- <form class="d-flex ms-3" role="search">
        <input class="form-control search-box me-2" type="search" placeholder="Search listings..." />
        <button class="btn btn-search" type="submit">Search</button>
      </form> -->

    </div>
  </div>
</nav>
